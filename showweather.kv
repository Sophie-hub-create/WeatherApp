WindowManager:
    MainWindow:
    ForecastWindow:

<Label>
    bold:True

<MainWindow>:
    name: "main"

 # dynamic placement size/pos_hint values between (0=0% and 1=100%, coordinate system from bottom left)
    FloatLayout:
        Label:
            id:datetime
            color: 0.14, 0.39, 0.39,1
            text:""
            pos_hint:{'center_x':0.5, 'center_y':0.925}
            font_size: self.height/25
        Image:
            id: weather_image
            source: "pics_weather/clear.png"
            pos_hint:{'center_x':0.5, 'center_y':0.8}    
        Label:
            id: city
            text: ""
            pos_hint:{'center_x':0.5, 'center_y':0.7}
            color: 0.14, 0.39, 0.39,1
            font_size: self.height/20
        Label:
            id: country
            text: ""
            pos_hint:{'center_x':0.5, 'center_y':0.65}
            color: 0.14, 0.39, 0.39,1
            font_size: self.height/25
        Label:
            id:temperature
            text: ""
            font_size:self.height/15
            color:  0.196, 0.6, 0.78
            pos_hint:{'center_x':0.5, 'center_y':0.55}
        Label:
            id:description
            color:0.141, 0.47, 0.51, 1 
            text: ""
            font_size:self.height/30
            pos_hint:{'center_x':0.5, 'center_y':0.4}
        Label:
            id:humidity
            color:0.141, 0.47, 0.51, 1  
            text: ""
            font_size:self.height/30
            pos_hint:{'center_x':0.5, 'center_y':0.35}
        Label:
            id:advice
            color:0.141, 0.47, 0.51, 1 
            text: "have a good day"
            font_size:self.height/30
            pos_hint:{'center_x':0.5, 'center_y':0.45}
        Label:
            id:windspeed
            color:0.141, 0.47, 0.51, 1 
            text: ""
            font_size:self.height/30
            pos_hint:{'center_x':0.5, 'center_y':0.3}
                    
        FloatLayout:
            size_hint_y: 0.25
            canvas:
                Color: 
                    rgb:rgba(50, 200, 200,1)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: [25,25,0,0]
            FloatLayout:
                pos_hint:{"center_x": 0.5, "center_y": 0.7}
                size_hint: 0.9, 0.18
                canvas:
                    Color: 
                        rgb:rgba(59, 154, 225,1)
                    RoundedRectangle:
                        size: self.size
                        pos:self.pos
                        radius: [10]
                TextInput:
                    id:city_name
                    hint_text:"Enter city"
                    size_hint: 1, None
                    pos_hint:{"center_x":0.5, "center_y":0.5}
                    multiline:False
                    font_size: 40
                    hint_text_color: 0.94 ,0.87, 0.706,1 
                    foreground_color: 0.94 ,0.87, 0.706,1 
                    background_color: 0.23, 0.60, 0.88,1
                    padding: 25
                    cursor_color: 0.94 ,0.87, 0.706,1 
                    cursor_width:"3sp"
                    
            Button:
                text: "Show weather"
                font_size: 35
                size_hint: 0.4, 0.3
                pos_hint: {"center_x": 0.25, "center_y": 0.3}
                background_color: 0.13, 0.88, 0.88,1
                color: 0.94 ,0.87, 0.706,1 
                on_release: 
                    #forecast.disabled=False
                    app.current_weather() 
                    #root.manager.transition.direction = "right"
            
            Button:
                id:forecast
                text: "Show forecast"
                font_size: 35
                size_hint: 0.4, 0.3 
                pos_hint: {"center_x": 0.75, "center_y": 0.3}
                background_color: 0.13, 0.88, 0.88,1
                color: 0.94 ,0.87, 0.706,1 
                #disabled: True
                on_release: 
                    app.forecast_weather()
                    app.root.current='forecast' 
                    root.manager.transition.direction = "left" 

